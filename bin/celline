#!/bin/bash
EXEC_DIR=$(dirname "$(
    cd "$(dirname "$0")" || exit
    pwd
)")
PROJ_DIR="$(pwd)"
cd "${EXEC_DIR}" || exit
poetry env use "$(which python)"
python -m venv .venv
if [ "$1" = "static" ]; then
    poetry run python "$EXEC_DIR/celline/initializer/initialize.py" "${EXEC_DIR}" "${@}"
else
    poetry run python -m celline "${EXEC_DIR}" "${PROJ_DIR}" "${@}"
fi
